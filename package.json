{
  "name": "github-to-jira-multi-keyconnector",
  "version": "1.0.0",
  "description": "A Microsoft Edge and Chrome extension that automatically converts JIRA issue codes to clickable links in GitHub.",
  "main": "content.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "build": "echo \"Build script would go here\"",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\""
  },
  "keywords": [
    "jira",
    "github",
    "browser-extension"
  ],
  "license": "SEE LICENSE IN README.md",
  "devDependencies": {
    "@types/chrome": "^0.0.253",
    "@types/jest": "^29.5.6",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {},
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "content.js",
      "popup.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": ["json", "lcov", "text", "clover"]
  }
}
